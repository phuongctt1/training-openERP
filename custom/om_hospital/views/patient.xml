<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_patient_kanban" model="ir.ui.view">
            <field name="name">phuong.patient.kanban</field>
            <field name="model">phuong.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <field name="name"/>
                                        </li>
                                        <li>
                                            <field name="age"/>
                                        </li>
                                        <li>
                                            <field name="gender"/>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_patient_tree" model="ir.ui.view">
            <field name="name">phuong.patient.tree</field>
            <field name="model">phuong.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>        

        <record id="view_patient_form" model="ir.ui.view">
            <field name="name">phuong.patient.form</field>
            <field name="model">phuong.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="age"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>        

        <record id="view_patient_search" model="ir.ui.view">
            <field name="name">phuong.patient.search</field>
            <field name="model">phuong.patient</field>
            <field name="arch" type="xml">
                <search string="Patients">
                    <field name="name"/>
                    <field name="note"/>
                    <separator/>
                    <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                    <filter string="Female" name="female" domain="[('gender','=','female')]"/>
                    <filter string="Other" name="other" domain="[('gender','=','other')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                        <filter string="Patient Name" name="patient_name" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="patient_action" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">phuong.patient</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first patient!
                </p>
            </field>
        </record>

        <menuitem id="hospital_root"
            name="Hospital"
            sequence="10"/>

        <menuitem id="hospital_patient_root"
            name="Patient"
            parent="hospital_root"
            sequence="10"/>

        <menuitem id="hospital_patient"
            name="Patient"
            parent="hospital_patient_root"
            action="patient_action"
            sequence="10"/>
</odoo>